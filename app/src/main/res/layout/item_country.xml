<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
         <variable
             name="Data"
             type="com.example.covid19.model.Data" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@{Data.country}"
            android:gravity="center"
            android:textSize="@dimen/textSize_content_small"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@{Data.cases}"
            android:layout_weight="1"
            android:textSize="@dimen/textSize_content_small"
            android:gravity="center"
            android:textColor="@color/red_color_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@{Data.deaths}"
            android:gravity="center"
            android:textSize="@dimen/textSize_content_small"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@{Data.recovered}"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_content_small"
            android:textColor="@color/green_color_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>