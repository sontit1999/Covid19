<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vietnam"
            type="com.example.covid19.model.Vietnam" />
        <variable
            name="global"
            type="com.example.covid19.model.Global" />
        <variable
            name="viewmodel"
            type="com.example.covid19.fragment.home.HomeViewModel" />
    </data>
    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
                <ImageView
                    android:id="@+id/ivMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/llLocationVietNam"
                        android:gravity="center"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/vn"
                            android:layout_width="48dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:id="@+id/tvVietNam"
                            android:text="Việt Nam"
                            android:textStyle="bold"
                            android:layout_marginLeft="1dp"
                            android:textSize="@dimen/textSize_tittle"
                            android:textColor="@color/green_color_picker"
                            android:backgroundTint="@color/colorWhile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        app:layout_constraintTop_toBottomOf="@id/llLocationVietNam"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:padding="10dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Số ca nhiễm"
                                android:textSize="@dimen/textSize_content_small"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{vietnam.cases}"
                                android:textSize="@dimen/textSize_content_small"
                                android:textColor="@color/colorRed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Tử vong"
                                android:textSize="@dimen/textSize_content_small"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{vietnam.deaths}"
                                android:textSize="@dimen/textSize_content_small"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Bình phục"
                                android:textSize="@dimen/textSize_content_small"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{vietnam.recovered}"
                                android:textSize="@dimen/textSize_content_small"
                                android:textColor="@color/green_color_picker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llLocationWord"
                        android:gravity="center"
                        android:padding="5dp"
                        app:layout_constraintTop_toBottomOf="@id/llLocationVietNam"
                        android:layout_width="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/earth1"
                            android:layout_width="48dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:id="@+id/tvWorld"
                            android:text="Thế Giới"
                            android:textStyle="bold"
                            android:textSize="@dimen/textSize_tittle"
                            android:textColor="@color/green_color_picker"
                            android:backgroundTint="@color/colorWhile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        app:layout_constraintTop_toBottomOf="@id/llLocationWord"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:padding="10dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Số ca nhiễm"
                                android:textSize="@dimen/textSize_content_small"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{global.cases}"
                                android:textSize="@dimen/textSize_content_small"
                                android:textColor="@color/colorRed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Tử vong"
                                android:textSize="@dimen/textSize_content_small"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{global.deaths}"
                                android:textSize="@dimen/textSize_content_small"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Bình phục"
                                android:textSize="@dimen/textSize_content_small"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{global.recovered}"
                                android:textSize="@dimen/textSize_content_small"
                                android:textColor="@color/green_color_picker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#EBEBEB"
                    android:layout_height="1dp"/>
                <TextView
                    android:text="Danh sách các nước trên thế giới"
                    android:padding="10dp"
                    android:textSize="@dimen/textSize_tittle"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@id/llLocationWord"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:padding="10dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Nước"
                            android:textSize="@dimen/textSize_content_small"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Số ca nhiễm"
                            android:textSize="@dimen/textSize_content_small"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Tử vong"
                            android:textSize="@dimen/textSize_content_small"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Hồi Phục"
                            android:textSize="@dimen/textSize_content_small"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCountry"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"/>
                <TextView
                    android:text="Corona virus 2019 là gì?"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/corona"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Nguồn gốc của virus corona 2019 từ đâu ?"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/nguongoccorona"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Cơ chế 2019-ncov lây lan như thế nào?"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/cochelaylan"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Những triệu chứng và biến chứng 2019-ncov có thể gây ra là gì?"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/trieuchung"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Khuyến cáo của bộ y tế để chủ động phòng bệnh"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/khuyencao"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/ivMain2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            android:layout_centerInParent="false"
            style="@style/SpinKitView.FadingCircle"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            app:SpinKit_Color="@color/colorYellow" />
    </RelativeLayout>
</layout>